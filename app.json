{
  "name": "todajoia-storefront",
  "description": "A GraphQL-powered, PWA, single-page storefront application for TodaJoia",
  "website": "https://todajoia.com/",
  "logo": "https://mirumee.com/img/opensource_saleor.jpg",
  "keywords": ["todajoia", "e-commerce", "storefront"],
  "env": {
    "API_URI": {
      "description": "URI of a running instance of TodaJoia GraphQL API",
      "value": "https://api.todajoia.com/graphql/"
    }
  },
  "buildpacks": [
    {
      "url": "https://github.com/heroku/heroku-buildpack-nodejs.git"
    },
    {
      "url": "https://github.com/heroku/heroku-buildpack-static.git"
    }
  ]
}
